<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back4"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="10dp"
    tools:context="com.example.islam.wireframe.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/logOut"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="تسجيل الخروج"
            android:textColor="#000000"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/logologologo"
            android:orientation="vertical"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <Button
            android:id="@+id/mainWork"
            style="@style/button"
            android:gravity="center"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:textSize="@dimen/button_text"
            android:text="العمل اليومي" />

        <Button
            android:id="@+id/mainSync"
            style="@style/button"
            android:gravity="center"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/button_text"
            android:text="مزامنه" />

        <Button
            android:id="@+id/maindownload"
            style="@style/button"
            android:gravity="center"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:textSize="@dimen/button_text"
            android:layout_marginTop="5dp"
            android:text="تحميل البيانات" />

        <Button
            android:id="@+id/mainReport"
            style="@style/button"
            android:gravity="center"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:textSize="@dimen/button_text"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="التقارير" />

    </LinearLayout>
</LinearLayout>
