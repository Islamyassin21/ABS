<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_report"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back4"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="10dp"
    tools:context="com.example.islam.wireframe.ReportActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/reportBack"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="@drawable/buttondesign"
            android:gravity="center"
            android:text="رجوع>>"
            android:textSize="@dimen/button_text" />

        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/logologologo"
            android:orientation="vertical" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="تقرير العمل اليومي"
        android:textColor="@color/text"
        android:textSize="25sp" />


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:paddingTop="30dp">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/reportDone"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_weight="0.4"
                android:background="@drawable/buttondesign"
                android:gravity="center"
                android:text="102"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.6"
                android:text="تم توصيل"
                android:textColor="@color/text"
                android:textSize="@dimen/text_view" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/reportFail"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_weight="0.4"
                android:background="@drawable/buttondesign"
                android:gravity="center"
                android:text="10"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.6"
                android:text="لم يتم توصيل"
                android:textColor="@color/text"
                android:textSize="@dimen/text_view" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/reportWorking"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_weight="0.4"
                android:background="@drawable/buttondesign"
                android:gravity="center"
                android:text="30"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.6"
                android:text="جاري العمل"
                android:textColor="@color/text"
                android:textSize="@dimen/text_view" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/reportSync"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_weight="0.4"
                android:background="@drawable/buttondesign"
                android:gravity="center"
                android:text="2"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.6"
                android:text="تم المزامنه"
                android:textColor="@color/text"
                android:textSize="@dimen/text_view" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/reportNotSync"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_weight="0.4"
                android:background="@drawable/buttondesign"
                android:gravity="center"
                android:text="5"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.6"
                android:text="لم يتم المزامنه"
                android:textColor="@color/text"
                android:textSize="@dimen/text_view" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/reportHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="20sp" />


</LinearLayout>
